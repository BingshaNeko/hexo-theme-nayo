// 文章排版

h1,h2,h3,h4,h5,h6,th   
  color  #000000
  font-weight 300
  letter-spacing .8px
  word-spacing .8px   
h1
  margin 1.6em 0
  font-size 28px   
h2  
  margin 1.5em 0
  font-size 24px
h3
  margin 1.4em 0
  font-size 22px
h4,h5,h6
  margin 1.3em 0
  font-size 20px 

.typo p 
  margin 1.4em 0
  line-height 2
  font-size 15px
  font-weight 300
  color#000
  letter-spacing 0.12px
  word-spacing 0.64px   
.typo img 
  margin 1.2em 0 
.typo li
  line-height 2

strong
  font-weight 500   
   
blockquote
  display block
  letter-spacing .4px
  font-size 15px
  padding 0 12px
  margin 2rem 0 
 
blockquote p  
  margin  0
  padding-left 10px
  border-left 3px solid #eee
  
hr
  margin 1em 0
  opacity .2
  border .2px solid $line-clr
ul,ol
  margin-left 22px
  padding-left 0px
ul p , ol p 
  margin 0
li
  font-size 15px  
  margin 8px 0 
  position relative


table 
  border-collapse collapse
  border-spacing 0
  font-size 14px
  margin 28px 0
     
th
  font-size 14px  
  
th,td
  border 1px solid #ddd
  padding .4rem 1rem
  margin 28px 0

dt,dd
  margin-bottom 10px

.article-excerpt 
  & h1,& h2,& h3,& h4,& h5,& h6
    margin .8em 0 
  & p
    margin 0 0 .8em

.typo a
  font-size 0.9rem
  color $thr-clr !important  
  text-decoration underline
  font-family 'Arial'
  &:hover    
    color $sub-clr !important  
